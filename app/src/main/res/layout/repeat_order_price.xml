<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green">
    
    <TextView
        android:id="@+id/repeat_order_location_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/white"
        android:text="23.90"/>

    <TextView
        android:id="@+id/repeat_order_location_rm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/repeat_order_location_price"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="RM"/>

    <TextView
        android:id="@+id/tv_repeat_order_location_laundry_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/repeat_order_location_rm"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="Laundry fee:"/>

    <TextView
        android:id="@+id/tv_member_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/repeat_order_location_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="19dp"
        android:textColor="#C0AB88"
        android:text="23.90"/>

    <TextView
        android:id="@+id/tv_member_discount_rm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@id/repeat_order_location_rm"
        android:layout_toStartOf="@id/tv_member_discount_price"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:textColor="#C0AB88"
        android:text="Membership Rate(GL20): -20% : -RM"/>

    <TextView
        android:id="@+id/repeat_order_location_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_member_discount_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="23.90"/>

    <TextView
        android:id="@+id/repeat_order_location_delivery_rm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_member_discount_price"
        android:layout_toStartOf="@id/repeat_order_location_delivery_fee"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="RM"/>

    <TextView
        android:id="@+id/tv_repeat_order_location_delivery_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/tv_member_discount_price"
        android:layout_toStartOf="@id/repeat_order_location_delivery_rm"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:text="Delivery fee:"/>

    <TextView
        android:id="@+id/repeat_order_location_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/repeat_order_location_delivery_fee"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="10dp"
        android:textColor="#C0AB88"
        android:text="23.90"/>

    <TextView
        android:id="@+id/repeat_order_location_total_rm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/repeat_order_location_delivery_fee"
        android:layout_toStartOf="@id/repeat_order_location_total_price"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="#C0AB88"
        android:text="RM"/>

    <TextView
        android:id="@+id/tv_repeat_order_location_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/repeat_order_location_delivery_fee"
        android:layout_toStartOf="@id/repeat_order_location_total_rm"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="#C0AB88"
        android:text="Total:"/>

</RelativeLayout>