<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_green">

    <TextView
        android:id="@+id/tv_pick_up_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="25dp"
        android:text="Pick Up Date"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pick_up_date"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/custom_login"
        android:drawableEnd="@drawable/ic_month"
        android:hint="Select date"
        android:inputType="date"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/text_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_order_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_order_date"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:text="Your order will be picked up within the working hours on the chosen date. Please make sure you packs the order as well"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_note_rider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_message"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="17dp"
        android:text="Note to rider"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_note_rider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_note_rider"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/custom_login"
        android:hint="e.g. Meet me at the lobby"
        android:inputType="date"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/text_color"
        android:textSize="15sp" />

</RelativeLayout>